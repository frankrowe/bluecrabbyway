{{#extend "css"}}
<link rel="stylesheet" href="{{config.domain}}/js/owl-carousel/owl-carousel/owl.carousel.css">

<link rel="stylesheet" href="{{config.domain}}/js/owl-carousel/owl-carousel/owl.theme.css">
<style>
  #slider {
    width: 100%;
  }

  #slider img {
    display: block;
    margin: 0 auto;
  }
</style>
{{/extend}}

<div id="maincontent_top">
  {{> sidebar}}


	<div id="subpage_content">
		<div id="subpage_titlebox">
		<img src="{{config.domain}}/var/skins/bluecrab_2010/images/secondary/subpage_titlebar/subpage_titlebar_farright.png" id="subpage_titlebox_far_right" />
		<img src="{{config.domain}}/var/skins/bluecrab_2010/images/secondary/subpage_titlebar/subpage_titlebar_left.png" id="subpage_titlebox_left" />
        <div id="subpage_titlebox_center">
			<h1>{{site.Name}}</h1>
			<img id="subpage_titlebox_middle_right_bottom" src="{{config.domain}}/var/skins/bluecrab_2010/images/secondary/subpage_titlebar/subpage_titlebar_middle_right_bottom.png" />
			<img id="subpage_titlebox_middle_right_top" src="{{config.domain}}/var/skins/bluecrab_2010/images/secondary/subpage_titlebar/subpage_titlebar_middle_right_top.png" />
		</div>
	</div>

    <div id="subpage_mainbox" class="static_page">
      <div class="site">
        <div id="slider" class="owl-carousel">
        {{#each site.photos}}
        <img src="{{.}}" />
        {{/each}}
        </div>
        {{site.DescriptionLong}}

        {{#if site.DateOfSite}}
        <p><h2>Date</h2></p>
        <p>{{site.DateOfSite}}</p>
        {{/if}}

        <p><h2>Address</h2></p>
        <p>{{site.StreetAddress1}}<br>
        {{site.City}}, {{site.State}}<br>
        {{site.Zip}}<br>
        </p>

        <p><h2>More Information</h2></p>
        {{#each site.websites}}
        <a href="{{.}}">{{.}}</a><br>
        {{/each}}

      </div>
    </div>
		<img src="{{config.domain}}/var/skins/bluecrab_2010/images/secondary/subpage_footer.png" alt="layout spacer" />
	</div>
</div>
{{#extend "scripts"}}
<script src="{{config.domain}}/js/owl-carousel/owl-carousel/owl.carousel.min.js"></script>
<script>
$(document).ready(function() {

  $("#slider").owlCarousel({
    navigation : true, // Show next and prev buttons
       slideSpeed : 300,
       paginationSpeed : 400,
       singleItem:true
     });

});
</script>
{{/extend}}
